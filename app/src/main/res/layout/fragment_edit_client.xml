<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feed.EditClientFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/editImage_IV"
            android:layout_width="251dp"
            android:layout_height="161dp"
            android:src="@drawable/ima_login_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editProfileClient_TV"
            android:layout_width="278dp"
            android:layout_height="65dp"
            android:layout_marginStart="64dp"
            android:fontFamily="@font/encode_sans"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Edit Profile"
            android:textAlignment="center"
            android:textColor="#E91E1E"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editImage_IV" />

        <EditText
            android:id="@+id/editClient_phoneET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/abel"
            android:hint="Phone"
            android:inputType="phone"
            android:textColor="#515050"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editClient_nameET"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editClient_nameET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/abel"
            android:hint="Name"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="#636161"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editProfileClient_TV"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editClient_pass1ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/abel"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editClient_curpassET"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editClient_curpassET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="@font/abel"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editClient_phoneET"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editClient_pass2ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:fontFamily="@font/abel"
            android:hint="New Password Again"
            android:inputType="textPassword"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editClient_pass1ET"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/editClient_saveBT"
            android:layout_width="109dp"
            android:layout_height="52dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/encode_sans"
            android:text="Save"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            app:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editClient_pass2ET" />

        <ProgressBar
            android:id="@+id/progressBar_editClient"
            style="?android:attr/progressBarStyle"
            android:layout_width="77dp"
            android:layout_height="68dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.348" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>