<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/encode_sans"
            android:text="Login"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_input_login" />

        <EditText
            android:id="@+id/email_input_login"
            android:layout_width="279dp"
            android:layout_height="57dp"
            android:layout_marginTop="60dp"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:fontFamily="@font/encode_sans"
            android:hint=" Email"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_TV" />

        <EditText
            android:id="@+id/password_input_login"
            android:layout_width="276dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/lock"
            android:ems="10"
            android:fontFamily="@font/encode_sans"
            android:hint=" Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_input_login" />

        <TextView
            android:id="@+id/Login_TV"
            android:layout_width="278dp"
            android:layout_height="65dp"
            android:layout_marginTop="208dp"
            android:fontFamily="@font/encode_sans"
            android:text="IMA Login"
            android:textAlignment="center"
            android:textColor="#E91E1E"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_Login"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="81dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.42" />

        <TextView
            android:id="@+id/register_LoginbusinessTV"
            style="@style/CardView.Light"
            android:layout_width="254dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:fontFamily="@font/encode_sans"
            android:foregroundGravity="center"
            android:gravity="center_horizontal"
            android:minHeight="48dp"
            android:text="New Business? Register"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_LoginclientTV" />

        <TextView
            android:id="@+id/register_LoginclientTV"
            style="@style/CardView.Light"
            android:layout_width="339dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:fontFamily="@font/encode_sans"
            android:foregroundGravity="center"
            android:gravity="center_horizontal"
            android:minHeight="48dp"
            android:text="Don't have an account? Register"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_button" />

        <ImageView
            android:id="@+id/photoLogin_IV"
            android:layout_width="239dp"
            android:layout_height="207dp"
            app:layout_constraintBottom_toTopOf="@+id/Login_TV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ima_login_photo" />

        <Switch
            android:id="@+id/switch_login"
            android:layout_width="134dp"
            android:layout_height="43dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/encode_sans"
            android:showText="true"
            android:textOff="Client"
            android:textOn="Business"
            android:thumb="@drawable/thumb1"
            android:track="@drawable/track"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.886"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_TV" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>